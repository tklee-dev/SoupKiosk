<Window x:Class="KGClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KGClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <StackPanel Orientation="Horizontal"  Height="20" VerticalAlignment="Top">

            <TextBlock Text="프린터명"/>
            <ComboBox Width="100" Name="cbPrinter"></ComboBox>
            
            
            <TextBlock Text="Mio포트"/>
            <ComboBox Width="100" Name="cbMio"></ComboBox>

            <TextBlock Text="HID포트"/>
            <ComboBox Width="100" Name="cbHID"></ComboBox>
            
            
        </StackPanel>
        <StackPanel  Orientation="Horizontal">
            <Button Content="장비초기화" Height="200" Width="200" Click="Button_Click"/>
            <Button Content="테스트출력+인증기" Height="200" Width="200" Click="Button_Click_1"/>
            <Button Content="HID 연결" Height="200" Width="200" Click="Button_Click_2"/>
            <Button Content="HID 연결끊기" Height="200" Width="200" Click="Button_Click_3"/>
        </StackPanel>
    </Grid>
</Window>
